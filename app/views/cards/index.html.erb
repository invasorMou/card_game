



<div class="mx-auto table">
	<table>
	<tr>
		<th>N.</th>
		<th>Name</th>
		<th>Class</th>
		<th>Type of card</th>
		<th colspan="2">Collection</th>
		<th>Mana cost</th>
		<th>Healt points</th>
		<th>Attack points</th>
		<th>Skills</th>
		<!-- <th>Card</th> -->

	</tr>
	<% @cards.each do |card|%>
	<tr>
		<td><%= card.id%></td>
		<td><%= card.name%></td>
		<td><%= card.klass%></td>
		<td><%= card.type_of_card%></td>
		<td><%= card.collection%></td>
		<td><%= card.collection_number%></td>
		<td><%= card.mana_cost%></td>
		<td><%= card.hp%></td>
		<td><%= card.attack%></td>
		<td><%= card.skills%></td>
		<!-- <td><%= image_tag asset_path(card.card_image)%></td> -->
	</tr>
	<%end%>
</table>

