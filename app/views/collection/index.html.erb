<div class="mx-auto table">
	<table>
	<tr>
		<th>N.</th>
		<th>Name</th>
		<th>Class</th>
		<th>Type of card</th>
		<th >Collection</th>
		<th>Healt points</th>
		<th>Attack points</th>
		<th>Skills</th>
	</tr>
	<% @cards.each do |card|%>
		<tr>
			<td><%= card.id%></td>
			<td><li style="list-style-type: none;" value="<%= card.id%>" data-toggle="modal" data-target="#myModal<%= card.id%>"><%= card.name%></li></td>
			<td><%= card.klass%></td>
			<td><%= card.kingdom%></td>
			<td><%= "#{card.collection}-#{card.collection_number}"%></td>
			<td><%= card.hp%></td>
			<td><%= card.attack%></td>
			<td><%= card.skills%></td>



			<!-- The Modal -->
			<div class="modal fade" id="myModal<%= card.id%>">
				<div class="modal-dialog">
					<div class="modal-content">
						<!-- Modal Header -->
				      <div class="modal-header">
				        <h4 class="modal-title"><%= card.name%></h4>
				        <button type="button" class="close" data-dismiss="modal">&times;</button>
				      </div>

				      <!-- Modal body -->
				      <div class="modal-body mx-auto">
								<%= image_tag card.url, width: '300'%>
				      </div>

				      <!-- Modal footer -->
				      <div class="modal-footer mx-auto">
				       	<%= card.skills%>
				      </div>

					</div>
				</div>
			</div>
		</tr>
	<%end%>

</table>
</div>